{
  "plugins": ["lodash"],
  "extends": [
    "plugin:lodash/recommended",
    "airbnb-base"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules" : {
    "func-names": 0,
    "space-before-function-paren": 0,
    "max-len": 0,
    "vars-on-top": 0,
    "global-require": 0,
    "object-curly-spacing": 0,
    "array-callback-return": 0,
    "no-param-reassign": 0,
    "no-new-func": 0,
    "indent": ["error", 2, {"SwitchCase": 1}],
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "semi": ["error", "never"],
    "import/extensions": ["error", "never", { "svg": "always", "vue": "always", "css": "always" }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-underscore-dangle": ["error", { "allow": ["__INITIAL_STATE__", "_uid"] }],
    "arrow-body-style": ["error", "as-needed"]
  },
  "globals":{
    "window": true,
    "document": true,
    "navigator": true,
    "location": true,
    "EventSource": true,
    "URL": true,
    "Notification": true,
    "HASHED_JWPLAYER_PATH": true
  },
  "env": { "es6": true }
}
